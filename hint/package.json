{
  "name": "hint",
  "displayName": "Hint",
  "description": "gets hint for terminal commands",
  "version": "0.0.1",
  "publisher": "lalyos",
  "engines": {
    "vscode": "^1.71.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lalyos/vscode-plugin-hint.git"
  },
  "homepage": "https://github.com/lalyos/vscode-plugin-hint/blob/master/hint/README.md",

  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hint.helloWorld",
    "onCommand:hint.hint",
    "onCommand:hint.lazy",
    "onCommand:hint.version"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hint.helloWorld",
        "title": "Hint: Hello World"
      },
      {
        "command": "hint.hint",
        "title": "Hint: Hint the next command"
      },
      {
        "command": "hint.lazy",
        "title": "Hint: Lazy"
      },
      {
        "command": "hint.version",
        "title": "Hint: version"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "trainingHints",
          "name": "Training Hints"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "trainingHints",
        "contents": "No Hints yet ...\n[Version](command:hint.version)\n[Hint](command:hint.hint)\n\n[Lazy](command:hint.lazy)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
